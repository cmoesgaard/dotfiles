[colors]
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color6:#222}
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color0:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color5:#222}
alert = ${xrdb:color3:#222}

nord0 = #2e3440
nord1 = #3b4252
nord2 = #434c5e
nord3 = #4c566a
nord4 = #d8dee9
nord5 = #e5e9f0
nord6 = #eceff4
nord7 = #8fbcbb
