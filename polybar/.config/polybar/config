[colors]
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color6:#222}
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color0:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color5:#222}
alert = ${xrdb:color3:#222}

nord0 = #2e3440
nord1 = #3b4252
nord2 = #434c5e
nord3 = #4c566a
nord4 = #d8dee9
nord5 = #e5e9f0
nord6 = #eceff4
nord7 = #8fbcbb
nord8 = #88c0d0
nord9 = #81a1c1
nord10 = #5e81ac
nord11 = #bf616a 
nord12 = #d08770
nord13 = #ebcb8b
nord14 = #a3be8c
nord15 = #b48ead

[settings]
screenchange-reload = true

format-background = ${colors.nord2}
format-padding = 1

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 25
radius = 0
fixed-center = false

background = ${colors.nord1}
foreground = ${colors.nord6}

line-size = 3

font-0 = Hack Nerd Font:style=Regular:size=10;2
font-1 = Hack Nerd Font:style=Bold:size=10;2
font-2 = Noto Emoji:scale=12

modules-left = i3 
modules-center = xwindow
modules-right = xkeyboard filesystem memory cpu wlan battery date

module-margin = 1

tray-position = right
tray-background = ${colors.nord2}


[bar/secondary]
inherit = bar/main
monitor = ${env:MONITOR:HDMI-1}

modules-left = i3 
modules-center = 
modules-right = date

tray-position = 

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
format-underline = ${colors.nord7}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "keyb "
label-layout = "%layout%"

format-underline = ${colors.nord11}


[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted-underline = ${colors.nord12}
label-mounted = %mountpoint%: %percentage_used%%
format-unmounted-underline = ${colors.nord12}
label-unmounted = %mountpoint% not mounted


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-padding = 0
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = #000

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.nord1}
label-focused-background = ${colors.nord4}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${colors.nord2}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 1
label-visible-background = ${colors.nord2}
label-visible-underline = ${colors.nord4}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-underline = ${colors.nord4}
label-urgent-background = ${colors.nord11}
label-urgent-padding = 1

; Separator in between workspaces
; label-separator = |


[module/memory]
type = internal/memory
interval = 2
format-prefix = "🤔 "
format-underline = ${colors.nord13}
label = "%percentage_used%%"

[module/cpu]
type = internal/cpu
interval = 2
format-underline = ${colors.nord14}
format-prefix = "🖥️ "
label = "%percentage:2%%"


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.primary}
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = s0
ramp-signal-1 = s1
ramp-signal-2 = s2
ramp-signal-3 = s3
ramp-signal-4 = s4
ramp-signal-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
date-alt = "%Y-%m-%d"

time = "%H:%M"
time-alt = "%H:%M:%S"

format-foreground = ${colors.nord6} 
format-underline = ${colors.nord15}

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.primary}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = "full "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = r0
ramp-capacity-1 = r1
ramp-capacity-2 = r2
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = c0
animation-charging-1 = c1
animation-charging-2 = c2
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = d0
animation-discharging-1 = d1
animation-discharging-2 = d2
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750
